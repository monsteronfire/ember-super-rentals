{{#if updateRentalForm}}
<h4>Edit {{rental.owner}}'s {{rental.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="owner">Owner</label>
        {{input value=owner id="owner" placeholder=rental.owner}}
      </div>

      <div class="form-group">
        <label for="type">Type</label>
        {{input value=tyoe id="type" placeholder=rental.type}}
      </div>

      <div class="form-group">
        <label for="">City</label>
        {{input value=city id="city" placeholder=rental.city}}
      </div>

      <div class="form-group">
        <label for="">Number of Bedrooms</label>
        {{input value=bedrooms id="bedrooms" placeholder=rental.bedrooms}}
      </div>

      <div class="form-group">
        <label for="">Image URL</label>
        {{input value=image id="image" placeholder=rental.image}}
      </div>

      <button {{action 'update' rental}}>Save Changes</button>
    </form>
  </div>
{{else}}
  <button {{action "updateRentalForm"}}>Edit Rental</button>
{{/if}}
